<div class="row">
    <h3>{{blog.title}}
    <small class="fa-small">{{{editIcon blog.user me blog._id false}}}</small>
    </h3>
</div>
<div class="row">
    <div class="col s12 m8">
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate createAt 'MMMM Do YYYY'}}</span>
                {{{blog.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <div class="card-title">
                    {{blog.user.displayName}}
                </div>
                <img src="{{blog.user.image}}" alt="User image" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/blogs/user/{{blog.user._id}}">More From {{blog.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>